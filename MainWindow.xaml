<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JobTracker"
        xmlns:Data="clr-namespace:JobTracker.Data" x:Class="JobTracker.MainWindow"
        mc:Ignorable="d"
        Title="Job Tracker" Height="550" Width="600" MinHeight="550" MinWidth="600">
    <Grid Background="HotPink">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Margin="10">
            <Label Content="Jobs"/>
            <ListBox x:Name="jobList" SelectionChanged="jobList_SelectionChanged">
                
            </ListBox>
        </StackPanel>
        <Button x:Name="BtnAddJob" Width="50" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="10" Click="BtnAddJob_Click" Content="Add Job"/>

        <!--This is where the info about the job lives-->
        <Grid Grid.Column="1" Margin="10" Background="CornflowerBlue">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label x:Name="compoundTitle" FontSize="14" Content="Company - Job"/>

            <StackPanel Grid.Row="1">
                <Label Content="Job Title"/>
                <TextBox x:Name="jobTitle" TextChanged="jobTitle_TextChanged" Text="Job"/>
                <Label Content="URL of Listing"/>
                <TextBox Text="URL"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Grid.Row="1">
                <Label Content="Company Name"/>
                <TextBox x:Name="companyName" TextChanged="companyName_TextChanged" Text="Company"/>
            </StackPanel>
            <StackPanel Grid.Row="2">
                <Label Content="Status"/>
                <StackPanel>
                    <CheckBox IsChecked="True" Content="Found"/>
                    <CheckBox Content="Researched"/>
                    <CheckBox Content="Cover Letter Written"/>
                    <CheckBox Content="Resume Written"/>
                    <CheckBox Content="Applied"/>
                    <CheckBox Content="Interviewing"/>
                </StackPanel>
                <Label Content="Final Status"/>
                <WrapPanel>
                    <CheckBox Content="Accepted"/>
                    <CheckBox Content="Rejected"/>
                </WrapPanel>

                <Label Content="Contact"/>
                <TextBox Text="Contact Name and Info"/>

            </StackPanel>

            <StackPanel Grid.Column="1" Grid.Row="2">
                <Label Content="Date Located"/>
                <DatePicker/>
                <Label Content="Date Materials Finished"/>
                <DatePicker/>
                <Label Content="Date Applied"/>
                <DatePicker/>
                <Label Content="Date Next Steps"/>
                <DatePicker/>
            </StackPanel>
            <StackPanel Grid.Row="3" Grid.ColumnSpan="2">
                <Label Content="Notes:"/>
                <TextBox VerticalScrollBarVisibility="Auto" SpellCheck.IsEnabled="True" HorizontalAlignment="Stretch" Width="Auto" Height="54" ScrollViewer.CanContentScroll="True"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>